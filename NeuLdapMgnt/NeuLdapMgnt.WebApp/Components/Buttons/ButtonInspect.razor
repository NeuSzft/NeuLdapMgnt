<Button Color="ButtonColor.Primary" Disabled="IsDisabled" @onclick="Inspect">
    <i class="bi bi-eye"></i>
    @Text
</Button>

@code {
    [Parameter]
    public string Text { get; set; } = string.Empty;

    [Parameter]
    public EventCallback<Student> OnClick { get; set; }

    [Parameter]
    public Student? Student { get; set; }

    [Parameter]
    public bool IsDisabled { get; set; }

    private async Task Inspect()
    {
        if (OnClick.HasDelegate)
        {
            await OnClick.InvokeAsync(Student);
        }
    }
}
