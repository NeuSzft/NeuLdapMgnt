@page "/students"

<PageTitle>Students</PageTitle>

<div class="row justify-content-between g-2">
	<div class="col">
		<h1>Students</h1>
	</div>
	<div class="col text-end">
		<ButtonRefresh OnClick="OnRefresh" Text="Refresh" />
	</div>
</div>

@if (isLoading)
{
	<Loading Text="Loading students" />
}
else if (!LocalDbService.Students.Any())
{
	<div class="d-flex justify-content-center text-center">
		<div>
			<h3 class="my-4">There are no students in the database</h3>
			<ButtonAdd Text="Add Students" OnClick="ToAddPage" />
		</div>
	</div>
}
else
{
	<TableStudents Students="LocalDbService.Students"
				   OnStudentsDelete="HandleDeleteStudents"
				   OnStudentsUpdate="HandleUpdateStudents" />
}

@code {
	private bool isLoading = true;

	protected override async Task OnInitializedAsync()
	{
		ApiRequests.EnsureAuthentication(NavManager);
		await LocalDbService.FetchClasses();
		await OnRefresh();
	}

	private async Task HandleDeleteStudents(List<Student> studentsToDelete)
	{
		isLoading = true;
		StateHasChanged();
		await LocalDbService.DeleteStudentsInBulk(studentsToDelete);
		await OnRefresh();
		isLoading = false;
	}

	private async Task HandleUpdateStudents((List<Student>, string) updateInfo)
	{
		var (studentsToUpdate, newClass) = updateInfo;
		isLoading = true;
		StateHasChanged();
		await LocalDbService.UpdateStudentClassInBulk(studentsToUpdate, newClass);
		await OnRefresh();
		isLoading = false;
	}

	private async Task OnRefresh()
	{
		isLoading = true;
		await LocalDbService.FetchStudents();
		StateHasChanged();
		isLoading = false;
	}

	private void ToAddPage() => NavManager.NavigateTo("/students/add");
}


