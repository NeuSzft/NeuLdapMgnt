<Button Color="ButtonColor.Light" Class="border-secondary" Disabled="IsDisabled" @onclick="Inspect" Size="Size.Small">
	<i class="bi bi-eye"></i>
	@Text
</Button>

@code {
	[Parameter]
	public string Text { get; set; } = string.Empty;

	[Parameter, EditorRequired]
	public string Id { get; set; } = string.Empty;

	[Parameter]
	public bool IsDisabled { get; set; }

	private void Inspect()
	{
		if (long.TryParse(Id, out long studentId) && studentId != 0)
		{
			NavManager.NavigateTo($"/students/{studentId}");
		}
		else
		{
			NavManager.NavigateTo($"/teachers/{Id}");
		}
	}
}
