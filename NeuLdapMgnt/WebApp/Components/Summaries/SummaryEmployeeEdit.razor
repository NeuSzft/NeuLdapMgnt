<div class="border rounded">
	<div class="row p-1 m-1 border-bottom">
		<div class="col-3 col-sm-2 col-lg-1">ID:</div>
		<div class="col-4 teacher-original-id">@EmployeeOriginal.Id</div>
		<div class="col-1 text-end">
			<i class="bi bi-arrow-right"></i>
		</div>
		<div class="col-4 teacher-edited-id">
			@if (EmployeeOriginal.Id != EmployeeEdited.Id)
			{
				<strong>@EmployeeEdited.Id</strong>
			}
			else
			{
				@EmployeeEdited.Id
			}
		</div>
	</div>
	<div class="row p-1 m-1 border-bottom">
		<div class="col-3 col-sm-2 col-lg-1">Name:</div>
		<div class="col-4 teacher-original-fullname">@EmployeeOriginal.FullName</div>
		<div class="col-1 text-end">
			<i class="bi bi-arrow-right"></i>
		</div>
		<div class="col-4 teacher-edited-fullname">
			@if (EmployeeOriginal.FullName != EmployeeEdited.FullName)
			{
				<strong>@EmployeeEdited.FullName</strong>
			}
			else
			{
				@EmployeeEdited.FullName
			}
		</div>
	</div>
	<div class="row p-1 m-1 border-bottom">
		<div class="col-3 col-sm-2 col-lg-1">Class:</div>
		<div class="col-4 teacher-original-class">@EmployeeOriginal.Class</div>
		<div class="col-1 text-end">
			<i class="bi bi-arrow-right"></i>
		</div>
		<div class="col-4 teacher-edited-class">
			@if (EmployeeOriginal.Class != EmployeeEdited.Class)
			{
				<strong>@EmployeeEdited.Class</strong>
			}
			else
			{
				@EmployeeEdited.Class
			}
		</div>
	</div>
	<div class="row p-1 m-1">
		<div class="col-3 col-sm-2 col-lg-1">Email:</div>
		<div class="col-4 teacher-original-email text-break">@EmployeeOriginal.Email</div>
		<div class="col-1 text-end">
			<i class="bi bi-arrow-right"></i>
		</div>
		<div class="col-4 teacher-edited-email text-break flex-fill">
			@if (EmployeeOriginal.Email != EmployeeEdited.Email)
			{
				<strong>@EmployeeEdited.Email</strong>
			}
			else
			{
				@EmployeeEdited.Email
			}
		</div>
	</div>
</div>

@code {
	[Parameter] public Employee EmployeeOriginal { get; set; } = default!;

	[Parameter] public Employee EmployeeEdited { get; set; } = default!;
}
