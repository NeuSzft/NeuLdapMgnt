@inherits LayoutComponentBase

<div class="page">
	<div>
		<NavMenu />
	</div>
	<main>
		<div class="top-row px-4">
			<Switch Label="Development" @bind-Value="IsDevelopment" @onclick="OnDevelopmentChange" Disabled="IsDevelopment" />
		</div>
		<article class="content px-4">
			@Body
		</article>
	</main>
</div>

<Modal IsServiceModal="true" />

@code
{
	private bool IsDevelopment = false;
	private Uri? BaseAddress = default!;

	protected override void OnInitialized()
	{
		BaseAddress = ApiRequests.GetBaseAddress();
	}

	private async Task OnDevelopmentChange()
	{
		if (IsDevelopment)
		{
			ApiRequests.SetBaseAddress(BaseAddress);
			await ModalService.ShowAsync(ModalOptions.Info("Changed to development mode", $"Api base address set to: '{BaseAddress}'"));
		}
		else
		{
			ApiRequests.SetBaseAddress(new("http://localhost:5000"));
			await ModalService.ShowAsync(ModalOptions.Info("Changed to development mode", "Api base address set to: 'http://localhost:5000'"));
		}
	}
}
